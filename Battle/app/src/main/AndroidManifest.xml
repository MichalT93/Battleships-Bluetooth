<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team.battle">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:configChanges="locale"
        android:icon="@mipmap/boat_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|locale"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseGameActivity"
            android:configChanges="locale"
            android:label="@string/title_activity_choose_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BattleActivity"
            android:configChanges="locale"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Prepare"
            android:configChanges="locale"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".SettingsActivity"
            android:configChanges="locale"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".StartActivity" />
        <activity
            android:name=".BasicActivity"
            android:label="@string/title_activity_basic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BattleMultiActivity"
            android:configChanges="locale"
            android:screenOrientation="landscape" />
    </application>

</manifest>